<!DOCTYPE html>
<html lang="en">

<% const title = "Season Details" %>

<head>
    <%- include("../partials/head.ejs", {title}) %>
</head>

<body>
    <%- include("../components/page-breadcrumb",{breadcrumbs:[{name:"Home",url:"/"},{name:"Seasons",url:"/seasons"}]}) %>
    <div class="container mt-5">
        <%- include("../components/page-title.ejs", {title}) %>
        <div class="row">
            <div style="height: 500px;">
                <img style="height: 500px;" src="<%= season.coverArt %>" alt="">
            </div>

            <div class="col">
                <%- include("../components/detailLabel.ejs", {labelName:"Title",labelText: season.title }) %>

                <%- include("../components/page-subtitle.ejs", {title: "Episodes"}) %>
                <%- include("../components/linkList.ejs", {entityList: season.episodes, entityComponent: "../components/episodeLink", emptyMessage: "No seasons recorded" }) %>
            </div>
            <div class="col-2">
                <%- include("../components/page-subtitle", {title: "Actions"}) %>
                <%- include("../components/buttonLink", {data:{label: "Edit", classes:"btn-primary", link: `/seasons/${season.id}/edit`}}) %>
                <%- include("../components/buttonForm", {title: "Delete", classes:"btn-danger", link: `/seasons/${season.id}`, method:"DELETE"}) %>
            </div>
        </div>
    </div>
</body>

</html>