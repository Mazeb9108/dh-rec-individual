<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("../partials/head.ejs",{title}) %>
</head>

<% 
    let data; 
    if(season){
        data = season;
        data.url = `/seasons/${season.id}?_method=PATCH`
    }else{
        data = {
            title: "",
            url: "/seasons",
        }
    }
%>

<body>
    <% 
        const breadcrumbs = [
            {name:"Home",url:"/"},
            {name:"Seasons",url:"/seasons"}
        ]
        if (data.id){
            breadcrumbs.push({title: (data.title), url:`/seasons/${data.id}`})
        }
    %>
    <%- include("../components/page-breadcrumb",{breadcrumbs}) %>
    <div class="container mt-5">

        <%- include("../components/page-title", {title: data.title }) %>

        <form action="<%= data.url %>" method="POST">
            <%- include("../components/form-input", { data:{label: "Title", name:"title", type:"text", value:data.title} }) %>
            <%- include("../components/form-input", { data:{label: "Rating", name:"rating", type:"text", value:data.rating} }) %>

            <%- include("../components/form-button", {data: {label: "Submit", type: "submit"}}) %>
        </form>
    </div>
</body>

</html>